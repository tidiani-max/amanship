{
  "expo": {
    "name": "KilatGo",
    "slug": "kilatgo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "kilatgo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "notification": {
      "icon": "./assets/images/notification-icon.png",
      "color": "#FFD700",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "{{unread_count}} new notifications"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kilatgo.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "KilatGo needs access to your microphone for voice orders.",
        "NSSpeechRecognitionUsageDescription": "KilatGo needs speech recognition for voice orders.",
        "NSUserNotificationsUsageDescription": "We send order updates and delivery notifications.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.kilatgo.app",
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "RECORD_AUDIO",
        "NOTIFICATIONS",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "android.permission.RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#FFD700"
      }
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFD700",
          "dark": {
            "backgroundColor": "#1A1A1A"
          }
        }
      ],
      "expo-web-browser",
      "expo-speech-recognition",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#FFD700"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 34
          }
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    },
    "owner": "dioti",
    "extra": {
      "eas": {
        "projectId": "8bf0d284-a394-42a9-a7db-e06415165da6"
      }
    }
  }
}
