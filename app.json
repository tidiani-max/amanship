{
  "expo": {
    "name": "KilatGo",
    "slug": "kilatgo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "kilatgo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "notification": {
      "icon": "./assets/images/notification-icon.png",
      "color": "#FFD700",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "{{unread_count}} new notifications"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kilatgo.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "KilatGo needs access to your microphone for voice orders",
        "NSSpeechRecognitionUsageDescription": "KilatGo needs access to speech recognition for voice orders",
        "NSUserNotificationsUsageDescription": "We send you order updates and delivery notifications.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.kilatgo.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
  "RECORD_AUDIO",
  "NOTIFICATIONS",
  "RECEIVE_BOOT_COMPLETED",
  "VIBRATE"
],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#FFD700"
      }
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFD700",
          "dark": {
            "backgroundColor": "#1A1A1A"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-build-properties",
        {
           "android": {
          "useAndroidX": true,
          "enableJetifier": true,
          "compileSdkVersion": 35,
          "targetSdkVersion": 34,
            "extraLines": [
              "configurations.all { resolutionStrategy { force 'androidx.core:core:1.13.1', 'androidx.versionedparcelable:versionedparcelable:1.1.1' } }"
            ],
            "packagingOptions": {
              "pickFirst": [
                "**/INotificationSideChannel.aidl",
                "**/INotificationSideChannel$Stub.class",
                "**/INotificationSideChannel.class",
                "**/IconCompatParcelizer.class",
                "**/VersionedParcelable.class",
                "**/VersionedParcelize.class",
                "**/libc++_shared.so",
                "**/libfbjni.so"
              ],
              "exclude": [
                "META-INF/DEPENDENCIES"
              ]
            }
          }
        }
      ],
      "expo-speech-recognition",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#FFD700",
          "sounds": []
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "113ea7fa-db9e-4380-b05f-dd63a05e5632"
      }
    },
    "owner": "dioti"
  }
}
